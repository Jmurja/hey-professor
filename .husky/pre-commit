#!/usr/bin/env sh

. "$(dirname -- "$0")/_/husky.sh"

# Executa o PHPStan e define mensagem de erro em caso de falha
./vendor/bin/phpstan

if [ $? -ne 0 ]; then
    echo "Opa... Deu ruim com o phpstan! Arrume antes de continuar ðŸ˜…"
    exit 1
fi

# Obtem arquivos PHP em stage para anÃ¡lise
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E "\.php$") || true

for FILE in $STAGED_FILES; do
    ./vendor/bin/pint "$FILE" --test
    git add "$FILE"
done

exit 0
